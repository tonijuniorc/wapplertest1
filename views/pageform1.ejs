<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formul치rio de Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #e6f7f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background-color: #d1f2eb;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            padding: 20px;
            border: 1px solid #a3d2d7;
        }

        h2 {
            text-align: center;
            color: #1e656d;
        }

        label {
            color: #1e656d;
            font-weight: bold;
        }
    </style>
    <script>
        function handleFormSubmit(event) {
            event.preventDefault();
            const form = event.target;
            const formData = new FormData(form);

            fetch('https://convergenteapps.app.n8n.cloud/webhook/form2', {
                method: 'POST',
                body: formData
            }).then(response => {
                if (response.ok) {
                    window.location.href = 'https://convergenteapps.app.n8n.cloud/webhook/form3';
                } else {
                    alert('Erro ao enviar o formul치rio. Por favor, tente novamente.');
                }
            }).catch(error => {
                console.error('Erro:', error);
                alert('Ocorreu um erro ao enviar o formul치rio.');
            });
        }
    </script>
</head>

<body>
    <div class="container form-container">
        <form onsubmit="handleFormSubmit(event)">
            <h2>Cadastro</h2>
            <div class="mb-3">
                <label for="name" class="form-label">Como quer ser chamado?</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="assistantName" class="form-label">Como gostaria que seu assistente se chamasse?</label>
                <input type="text" class="form-control" id="assistantName" name="assistantName" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telefone para cadastro</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Enviar Formul치rio</button>
        </form>
    </div>
</body>